                    <a class="nav-link" href="/transaction">Transactions</a>
                </li>
              </ul>
            </div>
        </nav>
        </div>
    </section>    

    <section id="transaction_table">
      <div class="table-responsive-md">
      <table class="table table-bordered table-hover table-striped" style="border-radius: 5px;">
          <tr>
              <th>Transaction_id</th>
              <th>Sender_name</th>
              <th>Receiver_name</th>
              <th>Credits_transferred</th>
          </tr>
          <% for(let transaction of foundTransaction){ %>
            <tr>
              
              <td> <%= transaction._id %> </td>
              <td> <%= transaction.sender %> </td>
              <td> <%= transaction.receiver %> </td>
              <td> <%= transaction.credits_Transfered %> </td>

            </tr>
          <% } %>

      </table>
    </div>
  </section>

